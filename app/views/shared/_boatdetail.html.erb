<div class="container">
  <div>
    <span>
      <h1><%= @boat.name %></h1>
    </span>
    <span><%= @boat.pickup_address %></span>
  </div>
  <div class="card" style="width: 50rem; height: ">
    <%= image_tag(@boat.img_url, height: 300, class: "card-img-top", style: "object-fit: cover")%>
    <div class="card-body d-flex p-2 justify-content-between">
      <div class="p-3">
        <h5 class="card-title">Owned by <%= @boat.user.first_name%></h5>
        <ul>
          <li>Brand: <%= @boat.brand %></li>
          <li>Engine: <%= @boat.engine %></li>
          <li>Year: <%= @boat.year %></li>
        </ul>
      </div>
      <div class="p-4">
        <h5>
          â‚¬<%= @boat.cost %> per day
        </h5>
        <% if current_user.id == @boat.user_id %>
          <%= link_to "Edit", edit_boat_path(@boat), class: "btn btn-primary mt-4 p-2" %>
          <%= link_to "Delete", boat_path(@boat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-primary mt-4 p-2" %>
        <% else %>
          <%= link_to "Book Here", new_boat_booking_path(@boat), class: "btn btn-primary mt-4 p-2" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
