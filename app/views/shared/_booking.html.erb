<div class="col">
  <%=  link_to booking.boat, class:"text-decoration-none text-dark" do %>
    <div class="card h-100" style="width: 306px;">
      <%= image_tag(booking.boat.img_url, height: 300, class: "card-img-top", style: "object-fit: cover")%>
      <div class="card-body">
        <p class="card-text"><strong>Booked dates</strong>: <br>
          From: <%= booking.start_date %> to <%= booking.end_date %> </p>
        <p class="card-text"><strong>Guests</strong>: <%= booking.guests %></p>
        <h5 class="card-title"><%= booking.boat.name %>
          (
          <%= booking.boat.capacity %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="16" height="16">
            <path d="M4.243 4.757a3.757 3.757 0 1 1 5.851 3.119 6.006 6.006 0 0 1 3.9 5.339.75.75 0 0 1-.715.784H2.721a.75.75 0 0 1-.714-.784 6.006 6.006 0 0 1 3.9-5.34 3.753 3.753 0 0 1-1.664-3.118Z"></path>
          </svg>
          )
        </h5>
        <ul>
          <li><strong>Brand</strong>: <%= booking.boat.brand %></li>
          <li><strong>Engine</strong>: <%= booking.boat.engine %></li>
          <li><strong>Year</strong>: <%= booking.boat.year %></li>
        </ul>
        <div class="d-flex p-2 justify-content-between">
          <h5>
            â‚¬<%= booking.boat.cost %> / day
          </h5>
          <%=link_to "Manage booking", edit_booking_path(booking), class:"btn btn-primary"%>
        </div>
      </div>
    </div>
  <% end %>
</div>
